<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        tools:context=".DialogBox">


        <TextView
            android:id="@+id/headerText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/sofia_sans_con"
            android:text="Sign up for texts to receive shipping and service updates and special offers?"
            android:textAlignment="center"
            android:textColor="@color/requiredBlack"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

<!--        <TextView-->
<!--            android:id="@+id/enterNumberToValidate"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginHorizontal="20dp"-->
<!--            android:layout_marginTop="25dp"-->
<!--            android:paddingVertical="13dp"-->
<!--            android:text="Enter mobile phone number"-->
<!--            android:textAlignment="center"-->
<!--            android:background="@drawable/border"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/headerText" />-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/enterNumberToValidate"
            android:layout_width="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/headerText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/grays_gray4_border">


            <TextView
                android:id="@+id/countryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="7dp"
                android:paddingVertical="8dp"
                android:drawableStart="@drawable/america"
                android:drawablePadding="8dp"
                android:text="+1"
                android:textColor="@color/requiredBlack"
                android:textSize="14sp"
                android:fontFamily="@font/sofia_sans_con"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/editableNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:background="@null"
                android:id="@+id/editableNumber"
                android:textColorHint="#8E8E8E"
                android:hint="Enter mobile phone number"
                android:textSize="14sp"
                android:fontFamily="@font/sofia_sans_con"
                android:paddingVertical="13dp"
                android:paddingEnd="46dp"
                android:paddingStart="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/countryCode"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/termsAndCondition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/brandon_grotesque_light"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterNumberToValidate" />

        <TextView
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:background="@color/requiredBlack"
            android:paddingTop="9dp"
            android:paddingBottom="8dp"
            android:text="CONFIRM"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/termsAndCondition" />

        <TextView
            android:id="@+id/noThanksButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/gray4_border"
            android:paddingTop="9dp"
            android:paddingBottom="8dp"
            android:text="NO THANKS"
            android:textAlignment="center"
            android:textColor="#606060"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmButton" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>