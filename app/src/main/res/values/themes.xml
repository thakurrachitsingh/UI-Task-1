<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewPagerTesting" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ViewPagerTesting.expandableHeadBody" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/sofia_sans_con</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="ViewPagerTesting.expandableHead" parent="ViewPagerTesting.expandableHeadBody">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical">11dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:background">@drawable/border_grey</item>
    </style>
    <style name="ViewPagerTesting.expandableBody" parent="ViewPagerTesting.expandableHeadBody">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/border</item>
    </style>
    <style name="ViewPagerTesting" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    </style>

</resources>










